%body.blank
.login-content
  / Main content
  .lc-block
    .container-center.animated.slideInDown
      .panel.panel-filled
        .panel-body
          = form_for(:session, url: login_path) do |f|
            .input-group.m-b-20
              %span.input-group-addon
                %i.fa.fa-envelope
              .fg-line
                = f.text_field :email, class: 'form-control', placeholder: 'Email'
            .input-group.m-b-20
              %span.input-group-addon
                %i.fa.fa-lock
              .fg-line
                = f.password_field :password, class: 'form-control', placeholder: 'Mật khẩu'
            = f.label :remember_me, class: "checkbox inline" do
              = f.check_box :remember_me
              %p Ghi nhớ
            %div
              = button_tag(type: 'submit', class: "btn btn-default btn-float btn-login") do
                %i.zmdi.zmdi-arrow-forward
    .lcb-navigation
      %a.btn.btn-default{:href => signup_path, style: "margin: 5px"} Đăng ký
      %a.btn.btn-default{:href => new_password_reset_path, style: "margin: 5px"} Quên mật khẩu
