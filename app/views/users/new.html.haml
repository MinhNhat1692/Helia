%body.blank
  .wrapper
    / Main content
    %section.content
      .back-link
        %a.btn.btn-accent{:href => "index.html"} Back to Dashboard
      .container-center.lg.animated.slideInDown
        = render 'shared/error_messages'
        .view-header
          .header-icon
            %i.pe.page-header-icon.pe-7s-add-user
          .header-title
            %h3 Register
            %small
              Please enter your data to register.
        .panel.panel-filled
          .panel-body
            = form_for(@user, :html => {id: 'loginForm'}) do |f|
              .row
                .form-group.col-lg-6
                  = f.label :name
                  = f.text_field :name, class: 'form-control', placeholder: 'Type your Username'
                  %span.help-block.small Your unique username to app
                .form-group.col-lg-6
                  = f.label :email
                  = f.text_field :email, class: 'form-control', placeholder: 'Type your Email'
                  %span.help-block.small Your unique email for contact
                .form-group.col-lg-6
                  = f.label :password
                  = f.password_field :password, class: 'form-control', placeholder: 'Type your password'
                  %span.help-block.small Your password
                .form-group.col-lg-6
                  = f.label :password_confirmation
                  = f.password_field :password_confirmation, class: 'form-control', placeholder: 'Type your password again', type: 'text'
                  %span.help-block.small Repeat your password
                = f.submit "Create my account", class: "btn btn-primary pull-right", style: "margin: 10px"
    / End main content
