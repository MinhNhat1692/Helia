%body.blank
  .wrapper
    / Main content
    %section.content
      .back-link
        %a.btn.btn-accent{:href => "index.html"} Back to Dashboard
      .container-center.lg.animated.slideInDown
        .view-header
          .header-icon
            %i.pe.page-header-icon.pe-7s-add-user
          .header-title
            %h3 Register
            %small
              Please enter your data to register.
        .panel.panel-filled
          .panel-body
            = form_for(@profile) do |f|
              .row
                .form-group.col-lg-4
                  = f.label :fname
                  = f.text_field :fname, class: 'form-control', placeholder: 'Type your firstname', 'data-placement': 'bottom'
                .form-group.col-lg-4
                  = f.label :lname
                  = f.text_field :lname, class: 'form-control', placeholder: 'Type your lastname', 'data-placement': 'bottom'
                .form-group.col-lg-4
                  = f.label :dob
                  = f.text_field :dob, class: 'form-control', placeholder: 'Type your lastname', 'data-placement': 'bottom'
                  :javascript
                    $(function () {
                      $('#profile_dob').datetimepicker({
                        defaultDate: "1/1/1990",
                        viewMode: 'years',
                        format: 'DD/MM/YYYY'
                      });
                    });
                .form-group.col-lg-3
                  = f.collection_select :dob, Gender.where(lang: "vi"), :id, :name, {prompt: "Giới tính"}, {class: "form-control"}
                .form-group.col-lg-3
                  = f.collection_select :dob, Nation.where(lang: "vi"), :id, :name, {prompt: "Địa chỉ"}, {class: "form-control"}
                .form-group.col-lg-3
                  = f.collection_select :dob, City.where(lang: "vi", nation_id: 1), :id, :name, {prompt: "Tỉnh/ TP"}, {class: "form-control"}
                .form-group.col-lg-3
                  = f.collection_select :dob, Province.where(lang: "vi", city_id: 1), :id, :name, {prompt: "Quận/ Huyện"}, {class: "form-control"}
                = f.submit "Xác nhận", class: "btn btn-primary pull-right", style: "margin: 10px"
            
            