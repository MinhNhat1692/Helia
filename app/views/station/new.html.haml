%body.blank
  .wrapper
    / Main content
    %section.content
      .back-link
        %a.btn.btn-accent{:href => "index.html"} Back to Dashboard
      .container-center.lg.animated.slideInDown
        .view-header
          .header-icon
            %i.pe.page-header-icon.pe-7s-add-user
          .header-title
            %h3 Register
            %small
              Please enter your data to register.
        .panel.panel-filled
          .panel-body
            = form_for(@station , url: station_path, html: {multipart: true}) do |f|
              .row
                .form-group.col-lg-12
                  = f.label :sname
                  = f.text_field :sname, class: 'form-control', placeholder: 'Type your station name', 'data-placement': 'bottom'
                .form-group.col-lg-4
                  = f.collection_select :country, Nation.where(lang: "vi"), :id, :name, {prompt: "Địa chỉ"}, {class: "form-control"}
                .form-group.col-lg-4
                  = f.collection_select :city, City.where(lang: "vi", nation_id: 1), :id, :name, {prompt: "Tỉnh/ TP"}, {class: "form-control"}
                .form-group.col-lg-4
                  = f.collection_select :province, Province.where(lang: "vi", city_id: 1), :id, :name, {prompt: "Quận/ Huyện"}, {class: "form-control"}
                .form-group.col-lg-12
                  = f.label :address
                  = f.text_field :address, class: 'form-control', placeholder: 'Type your address', 'data-placement': 'bottom'
                .form-group.col-lg-4
                  = f.label :pnumber
                  = f.text_field :pnumber, class: 'form-control', placeholder: 'Type your phonenumber', 'data-placement': 'bottom'
                .form-group.col-lg-4
                  = f.label :hpage
                  = f.text_field :hpage, class: 'form-control', placeholder: 'Type your station Homepage', 'data-placement': 'bottom'
                .form-group.col-lg-4
                  = f.label :logo
                  = f.file_field :logo
                .form-group.col-lg-12
                  = f.submit "Xác nhận", class: "btn btn-primary", style: "width:100%;margin-right: 20px;margin-top: 20px"
            
            